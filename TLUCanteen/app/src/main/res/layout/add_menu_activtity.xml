<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blue"
    android:padding="24dp">

    <!-- Nút Back -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_circle_black"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="Back"
        app:tint="@android:color/white"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Thanh tìm kiếm -->
    <SearchView
        android:id="@+id/search_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:queryHint="Tìm kiếm"
        android:iconifiedByDefault="false"
        app:layout_constraintTop_toBottomOf="@id/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white" />

    <!-- Tiêu đề "Thêm thực đơn" -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm thực đơn"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/search_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="30dp" />

    <!-- Đặt tên cho thực đơn -->
    <TextView
        android:id="@+id/tv_label_menu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đặt tên cho thực đơn"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="30dp"/>

    <EditText
        android:id="@+id/et_menu_name"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Đặt tên ở đây"
        android:padding="12dp"
        android:background="@drawable/edittext_bg"
        app:layout_constraintTop_toBottomOf="@id/tv_label_menu_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Lựa chọn món cho thực đơn -->
    <TextView
        android:id="@+id/tv_label_choose_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lựa chọn món cho thực đơn"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/et_menu_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="30dp"/>

    <Spinner
        android:id="@+id/spinner_foods"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/tv_label_choose_food"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Ghi chú -->
    <TextView
        android:id="@+id/tv_label_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GHI CHÚ"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/spinner_foods"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="30dp"/>

    <EditText
        android:id="@+id/et_notes"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:hint="Ghi chú"
        android:padding="12dp"
        android:background="@drawable/edittext_bg"
        app:layout_constraintTop_toBottomOf="@id/tv_label_notes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Nút "Thêm thực đơn" -->
    <Button
        android:id="@+id/btn_add_menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="+ Thêm thực đơn"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:background="@drawable/btn_bg_red"
        app:layout_constraintTop_toBottomOf="@id/et_notes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        android:layout_marginTop="30dp" />

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:menu="@menu/bottom_navigation_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
