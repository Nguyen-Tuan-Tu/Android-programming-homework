<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:padding="24dp">

    <!-- Nút Back -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_circle_black"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="Back"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true"
        app:tint="@android:color/white" />

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xác nhận Email"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_below="@id/btn_back"
        android:layout_marginTop="32dp"/>

    <!-- Mô tả -->
    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập mã xác nhận đã gửi tới hộp thư"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>

    <!-- Label Mã xác nhận -->
    <TextView
        android:id="@+id/tv_label_verification_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã xác nhận:"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/tv_subtitle"
        android:layout_marginTop="32dp"/>

    <!-- Input Mã xác nhận -->
    <EditText
        android:id="@+id/et_verification_code"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Nhập mã xác nhận"
        android:padding="12dp"
        android:background="@drawable/edittext_bg"
        android:layout_below="@id/tv_label_verification_code"
        android:layout_marginTop="8dp"/>

    <!-- Nút Xác nhận -->
    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Xác nhận"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:background="@drawable/btn_bg"
        android:layout_below="@id/et_verification_code"
        android:layout_marginTop="32dp"/>
</RelativeLayout>
