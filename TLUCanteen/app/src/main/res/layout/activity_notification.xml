<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AAB3F7">

    <!-- Header -->
    <TextView
        android:id="@+id/notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông Báo"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Notification 1 -->
    <TextView
        android:id="@+id/notification_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Có đơn hàng mới"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="#FFEB3B"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/notification_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Notification 2 -->
    <TextView
        android:id="@+id/notification_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Đã thêm 1 thực đơn cho tuần"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="#FFEB3B"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/notification_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Notification 3 -->
    <TextView
        android:id="@+id/notification_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Wellcom to Canteen!"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="#FFEB3B"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/notification_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        tools:ignore="MissingConstraints">

        <!-- Home Icon -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_home"
            android:contentDescription="Home"/>

        <!-- Menu Icon -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_menu"
            android:contentDescription="Menu"
            android:layout_marginStart="32dp"/>

        <!-- Notification Icon -->
        <ImageView
            android:id="@+id/btn_notif"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_notification"
            android:contentDescription="Notification"
            android:layout_marginStart="32dp"/>

        <!-- More Icon -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_more"
            android:contentDescription="More"
            android:layout_marginStart="32dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
