<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#AAB3F7"
    android:gravity="center">

    <!-- Logo -->

    <!-- Title -->

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:contentDescription="Logo"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="THUY LOI CANTEEN CONNECT"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quản lý đơn đặt trước"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginBottom="32dp" />

    <!-- Layout chứa Icon và Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Icon bên trái -->
        <ImageView
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:contentDescription="Icon"
            android:src="@drawable/ic_checklist" />

        <!-- Button - Xem danh sách đơn hàng -->
        <Button
            android:id="@+id/btn_ViewOrders"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:backgroundTint="#fdf1da"
            android:gravity="center"
            android:text="Xem danh sách đơn hàng"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Layout chứa Icon và Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Icon bên trái -->
        <ImageView
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:contentDescription="Icon"
            android:src="@drawable/ic_graph" />

        <!-- Button - Thống kê đơn hàng -->
        <Button
            android:id="@+id/btn_OrderStatistics"
            android:layout_width="234dp"
            android:layout_height="57dp"
            android:backgroundTint="#fdf1da"
            android:gravity="center"
            android:text="Tống kê đơn hàng"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
