<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="#AAB3F7"
    android:gravity="center">

    <!-- Back Button -->

    <!-- Logo -->

    <!-- Đặt nút Back vào một LinearLayout ngang -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:layout_marginTop="16dp"> <!-- Thêm dòng này để tránh dính đỉnh -->

        <ImageButton
            android:id="@+id/btn_Back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:src="@drawable/ic_back"
            android:scaleType="centerInside" /> <!-- Giúp ảnh không bị cắt mép -->
    </LinearLayout>

    <!-- Title -->

    <ImageView
        android:layout_width="149dp"
        android:layout_height="144dp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:contentDescription="Logo"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="THUY LOI CANTEEN CONNECT"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xem danh sách đơn hàng"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginBottom="32dp" />

    <!-- Món ăn 1 -->

    <!-- Món ăn 2 -->
    <LinearLayout
        android:layout_width="393dp"
        android:layout_height="93dp"
        android:layout_marginBottom="12dp"
        android:background="#fdf1da"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Hình ảnh món ăn -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:contentDescription="Bánh mì"
            android:src="@drawable/ic_banhmi" />

        <!-- Text mô tả món ăn -->
        <LinearLayout
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bánh mì"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Button "Chi tiết" -->
            <Button
                android:id="@+id/btn_infoBM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#FFEB3B"
                android:text="Chi tiết"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>
        <!-- Tích xanh (ẩn đi mặc định) -->
        <ImageView
            android:id="@+id/checkIconBM"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            android:src="@drawable/ic_check" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="392dp"
        android:layout_height="93dp"
        android:layout_marginBottom="12dp"
        android:background="#fdf1da"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Hình ảnh món ăn -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:contentDescription="Mì tôm"
            android:src="@drawable/ic_mitom" />

        <!-- Text mô tả món ăn -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mì tôm"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Button "Chi tiết" -->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#FFEB3B"
                android:text="Chi tiết"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>
        <!-- Tích xanh (ẩn đi mặc định) -->
        <ImageView
            android:id="@+id/checkIconMT"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            android:src="@drawable/ic_check" />
    </LinearLayout>

    <!-- Món ăn 3 -->
    <LinearLayout
        android:layout_width="392dp"
        android:layout_height="89dp"
        android:layout_marginBottom="12dp"
        android:background="#fdf1da"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Hình ảnh món ăn -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:contentDescription="Súp rau"
            android:src="@drawable/ic_suprau" />

        <!-- Text mô tả món ăn -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Súp rau quả"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Button "Chi tiết" -->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#FFEB3B"
                android:text="Chi tiết"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>
        <!-- Tích xanh (ẩn đi mặc định) -->
        <ImageView
            android:id="@+id/checkIconSR"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            android:src="@drawable/ic_check" />
    </LinearLayout>

    <!-- Món ăn 4 -->
    <LinearLayout
        android:layout_width="392dp"
        android:layout_height="87dp"
        android:layout_marginBottom="12dp"
        android:background="#fdf1da"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Hình ảnh món ăn -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:contentDescription="Hủ tiếu trộn"
            android:src="@drawable/ic_hutieutron" />

        <!-- Text mô tả món ăn -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hủ tiếu trộn"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Button "Chi tiết" -->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#FFEB3B"
                android:text="Chi tiết"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>
        <!-- Tích xanh (ẩn đi mặc định) -->
        <ImageView
            android:id="@+id/checkIconHT"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            android:src="@drawable/ic_check" />
    </LinearLayout>

</LinearLayout>
