<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#9EAEEE">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/back_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_back"/>

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hôm nay"
            android:textSize="30sp"
            android:textColor="#000"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- Toggle Buttons -->
    <LinearLayout
        android:id="@+id/toggle_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:padding="4dp">

        <TextView
            android:id="@+id/btn_food"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Đồ ăn"
            android:textColor="#000"
            android:background="@drawable/toggle_selected"/>

        <TextView
            android:id="@+id/btn_drink"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:text="Đồ uống"
            android:textColor="#000"
            android:background="@drawable/toggle_unselected"/>
    </LinearLayout>

    <!-- List of items (Food & Drinks) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toggle_group"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Item 1: Burger -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginVertical="8dp"
            android:background="@color/white"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_mitom"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp">

                <TextView
                    android:text="Mì tôm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#000000"/>

                <TextView
                    android:text="50.000 vnđ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#000000"/>
            </LinearLayout>

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Còn hàng"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:background="@drawable/status_available"/>
        </LinearLayout>

        <!-- Item 2: Bánh mì -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginVertical="8dp"
            android:background="@color/white"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_banhmi"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp">

                <TextView
                    android:text="Bánh mì"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#000000"/>

                <TextView
                    android:text="25.000 vnđ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#000000"/>
            </LinearLayout>

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Còn hàng"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:background="@drawable/status_available"/>
        </LinearLayout>

        <!-- Item 3: Phở bò -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginVertical="8dp"
            android:background="@color/white"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_hutieu"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp">

                <TextView
                    android:text="Hủ tiếu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#000000"/>

                <TextView
                    android:text="40.000 vnđ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#000000"/>
            </LinearLayout>

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Còn hàng"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:background="@drawable/status_available"/>
        </LinearLayout>

    </LinearLayout>



    <!-- Bottom nav -->

</RelativeLayout>
