<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blue"
    android:padding="24dp">

    <!-- Nút Back -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_circle_black_admin"
        android:src="@drawable/ic_arrow_back_admin"
        android:contentDescription="Back"
        app:tint="@android:color/white"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Tiêu đề "Cập nhật thực đơn" -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cập nhật thực đơn"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp" />

    <!-- TextView ngày -->
    <TextView
        android:id="@+id/tv_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn ngày trong tuần"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Spinner ngày -->
    <Spinner
        android:id="@+id/spinner_days"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_day"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Đặt tên cho thực đơn -->
    <EditText
        android:id="@+id/et_menu_name"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Đặt tên thực đơn"
        android:padding="12dp"
        android:background="@drawable/edittext_bg_admin"
        app:layout_constraintTop_toBottomOf="@id/spinner_days"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Lựa chọn món cho thực đơn -->
    <MultiAutoCompleteTextView
        android:id="@+id/multi_spinner_foods"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Chọn món ăn"
        android:padding="12dp"
        android:background="@drawable/edittext_bg_admin"
        app:layout_constraintTop_toBottomOf="@id/et_menu_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Ghi chú -->
    <EditText
        android:id="@+id/et_notes"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:hint="Ghi chú"
        android:padding="12dp"
        android:background="@drawable/edittext_bg_admin"
        app:layout_constraintTop_toBottomOf="@id/multi_spinner_foods"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Nút "Cập nhật thực đơn" -->
    <Button
        android:id="@+id/btn_update_menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Cập nhật thực đơn"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:background="@drawable/btn_bg_red_admin"
        app:layout_constraintTop_toBottomOf="@id/et_notes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
