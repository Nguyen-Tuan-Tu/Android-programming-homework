<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:padding="24dp">

    <!-- Nút Back -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_circle_black_admin"
        android:src="@drawable/ic_arrow_back_admin"
        android:contentDescription="Back"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true"
        app:tint="@android:color/white" />

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đặt lại mật khẩu"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_below="@id/btn_back"
        android:layout_marginTop="32dp"/>

    <!-- Label Mật khẩu mới -->
    <TextView
        android:id="@+id/tv_label_new_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mật khẩu mới:"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="32dp"/>

    <!-- Input Mật khẩu mới -->
    <EditText
        android:id="@+id/et_new_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Nhập mật khẩu mới"
        android:padding="12dp"
        android:background="@drawable/edittext_bg_admin"
        android:layout_below="@id/tv_label_new_password"
        android:layout_marginTop="8dp"/>

    <!-- Label Xác nhận mật khẩu -->
    <TextView
        android:id="@+id/tv_label_confirm_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xác nhận mật khẩu:"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/et_new_password"
        android:layout_marginTop="32dp"/>

    <!-- Input Xác nhận mật khẩu -->
    <EditText
        android:id="@+id/et_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Xác nhận mật khẩu mới"
        android:padding="12dp"
        android:background="@drawable/edittext_bg_admin"
        android:layout_below="@id/tv_label_confirm_password"
        android:layout_marginTop="8dp"/>

    <!-- Nút Xác nhận -->
    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Xác nhận"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:background="@drawable/btn_bg_admin"
        android:layout_below="@id/et_confirm_password"
        android:layout_marginTop="32dp"/>
</RelativeLayout>
